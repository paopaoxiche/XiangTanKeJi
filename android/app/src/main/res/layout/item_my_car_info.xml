<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp64"
    android:background="@color/dark_white">

    <ImageView
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_marginTop="@dimen/dp12"
        android:layout_marginBottom="@dimen/dp12"
        android:id="@+id/iv_car_icon"
        android:src="@drawable/icon_car1"/>

    <TextView
        android:id="@+id/tv_car_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_toRightOf="@id/iv_car_icon"
        android:text="大型车"
        android:layout_marginTop="@dimen/dp12"
        android:includeFontPadding="false"
        android:textColor="@color/title_black"
        android:textSize="@dimen/sp18"/>

    <TextView
        android:id="@+id/tv_car_type_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_toRightOf="@id/iv_car_icon"
        android:text="九座以上"
        android:layout_marginBottom="@dimen/dp12"
        android:layout_alignParentBottom="true"
        android:includeFontPadding="false"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp14"/>

    <TextView
        android:id="@+id/tv_car_authentication_status"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/yellow"
        android:textSize="@dimen/sp15"
        android:text="认证中"/>

    <ImageView
        android:layout_width="@dimen/dp18"
        android:layout_height="@dimen/dp18"
        android:id="@+id/iv_authentication_icon"
        android:layout_toLeftOf="@id/tv_car_authentication_status"
        android:layout_marginRight="@dimen/dp4"
        android:layout_centerVertical="true"
        android:src="@drawable/img_ident_no"/>

</RelativeLayout>