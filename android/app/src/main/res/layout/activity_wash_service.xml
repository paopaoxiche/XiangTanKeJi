<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.WashService.WashServiceActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/back_button"
                    android:src="@drawable/ic_keyboard_arrow_left_black_36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/title"
                    android:gravity="center"
                    android:text="洗车场详细信息"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"/>
                <ImageView
                    android:visibility="invisible"
                    android:src="@drawable/ic_keyboard_arrow_left_black_36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#f4f4f4"
                android:padding="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="72dp"
                    android:orientation="vertical">

            <include
                layout="@layout/view_payment"/>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


        <Button
            android:id="@+id/pay_button"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_button_corner"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:text="去支付"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_height="52dp" />
    </FrameLayout>



</LinearLayout>