<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/background_orange_radius4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/item_class_img"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:id="@+id/item_class_text"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:lines="3"
            android:ellipsize="end"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="84dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/class_price1"
                android:textSize="16sp"
                android:textColor="#F89B0A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/class_price2"
                android:textSize="14sp"
                android:textColor="#B7C4CB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
