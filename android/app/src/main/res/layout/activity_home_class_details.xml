<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.DriverMain.HomeClass.HomeClassActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back_button"
            android:src="@drawable/ic_keyboard_arrow_left_black_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="24sp"/>
        <ImageView
            android:visibility="invisible"
            android:src="@drawable/ic_keyboard_arrow_left_black_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/class_details_img"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />

            <LinearLayout
                android:padding="16dp"
                android:background="#f7f7f7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.xtkj.paopaoxiche.widget.MarqueeTextView
                    android:id="@+id/class_details_text"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:layout_height="wrap_content">

                </com.xtkj.paopaoxiche.widget.MarqueeTextView>
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/class_price1"
                        android:textSize="16sp"
                        android:textColor="#F89B0A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/class_price2"
                        android:textSize="14sp"
                        android:textColor="#B7C4CB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView

                            android:visibility="invisible"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_width="28dp"
                            android:layout_height="16dp" />
                        <TextView
                            android:id="@+id/class_details_name"
                            android:textSize="18sp"
                            android:textColor="#333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout

                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/img_address"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_width="28dp"
                            android:layout_height="16dp" />
                        <TextView
                            android:id="@+id/class_details_location"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/img_phone2"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_width="28dp"
                            android:layout_height="16dp" />
                        <TextView
                            android:id="@+id/class_details_phone"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
                <ImageButton
                    android:id="@+id/class_details_button"
                    android:layout_width="48dp"
                    android:background="#F89B0A"
                    android:src="@drawable/btn_go"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>