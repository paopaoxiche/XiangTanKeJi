<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:background="@drawable/ripple_bg_white"
    android:layout_height="wrap_content"
    android:focusable="true">
    <ImageView
        android:id="@+id/user_img"
        android:layout_marginStart="4dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#fff"/>

    <LinearLayout
        android:layout_marginStart="18dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#333"
                android:text="洗车场名字" />
           <LinearLayout
               android:orientation="horizontal"
               android:gravity="center_vertical"
               android:layout_width="wrap_content"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/img_honor"
                   />
               <TextView
                   android:id="@+id/honor_times"
                   android:layout_marginStart="7dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="9"
                   android:textSize="14sp"
                   android:textColor="#F89B0A" />

               <TextView
                   android:layout_marginStart="6dp"
                   android:textColor="#11B0F2"
                   android:textSize="14sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="接洗次数：" />
               <TextView
                   android:id="@+id/wash_times"
                   android:textSize="14sp"
                   android:text="0"
                   android:textColor="#11B0F2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:textColor="#11B0F2"
                   android:textSize="14sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="次"
                   />
           </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#333"
                    android:text="￥"
                    />
                <TextView
                    android:id="@+id/yard_spend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#333"
                    android:text="0.00"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/yard_distance"
                android:textAlignment="viewEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0m"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>